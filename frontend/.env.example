# Frontend Configuration
# Options:
# - Local Flask: http://localhost:5000
# - Local Workers: http://localhost:8787
# - Railway: https://your-app.railway.app
# - Cloudflare Workers: https://pr-review-worker.your-username.workers.dev
VITE_API_URL=http://localhost:8787
VITE_WS_URL=ws://localhost:5000

# Application Settings
VITE_APP_TITLE=PR Review Agent
VITE_APP_DESCRIPTION=Professional Pull Request Review Dashboard
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REALTIME=true

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_PWA=true
VITE_ENABLE_NOTIFICATIONS=true

# Optional: Custom Branding
VITE_COMPANY_NAME=Your Company
VITE_COMPANY_LOGO=/logo.png
VITE_SUPPORT_EMAIL=support@yourcompany.com

# Development Settings
VITE_DEBUG_MODE=false
VITE_MOCK_API=false